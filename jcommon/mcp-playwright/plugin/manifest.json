{
"manifest_version":3,
"name":"MousePositionTracker",
"version":"1.0",
"description":"Tracksmousepositionandsimulatesclicks",
"permissions":["activeTab","scripting","storage","tabs","downloads","webSocket","windows","contextMenus","history","bookmarks","sidePanel"],
"host_permissions":["<all_urls>","ws://127.0.0.1:8181/*"],
"action":{
"default_title":"Open Browser Assistant"
},
"side_panel":{
"default_path":"popup.html"
},
"content_scripts":[
{
"matches":["<all_urls>"],
"js":["content.js"]
},
{
"matches":["<all_urls>"],
"js":["buildDomTree.js"]
},
{
"matches": ["<all_urls>"],
"js": ["actionManager.js"],
"run_at": "document_end"
}
],
"background":{
"service_worker":"background.js",
"type":"module"
},
"web_accessible_resources": [{
"resources": [
"tree-viewer.html",
"tree-viewer.js"
],
"matches": ["<all_urls>"]
},
{
"resources": ["error-page.html"],
"matches": ["<all_urls>"]
},
{
"resources": ["actionManager.js"],
"matches": ["<all_urls>"]
}
]
}
