{
"manifest_version":3,
"name":"MousePositionTracker",
"version":"1.0",
"description":"Tracksmousepositionandsimulatesclicks",
"permissions":["activeTab","scripting","storage","tabs","downloads","webSocket","windows","contextMenus","history","bookmarks"],
"host_permissions":["<all_urls>","ws://127.0.0.1:8181/*"],
"action":{
"default_popup":"popup.html"
},
"content_scripts":[
{
"matches":["<all_urls>"],
"js":["content.js"]
},
{
"matches":["<all_urls>"],
"js":["buildDomTree.js"]
}
],
"background":{
"service_worker":"background.js"
},
"web_accessible_resources": [{
"resources": [
"tree-viewer.html",
"tree-viewer.js"
],
"matches": ["<all_urls>"]
},
{
"resources": ["error-page.html"],
"matches": ["<all_urls>"]
}]
}
